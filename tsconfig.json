{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "src",
    "paths": {
      "@app/*": ["app/*"],
      "@services/*": ["app/services/*"],
      "@components/*": ["app/components/*"],
      "@interfaces/*": ["app/interfaces/*"],
      "@constants/*": ["app/constants/*"],
      "@utils/*": ["app/utils/*"],
    },
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "lib": ["es2015", "es2016", "es2017", "es2018", "dom"],
  },
  "include": [
    "./src/**/*"
  ]
}